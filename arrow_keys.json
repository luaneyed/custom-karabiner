{
  "title": "Change right_command+p/l/;/' to arrow keys",
  "rules": [
    {
      "manipulators": [
        {
          "type": "basic",
          "description": "right_command + p -> up_arrow",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": []
            }
          ]
        },
        {
          "type": "basic",
          "description": "right_command + l -> left_arrow",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": []
            }
          ]
        },
        {
          "type": "basic",
          "description": "right_command + ; -> down_arrow",
          "from": {
            "key_code": ";",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": []
            }
          ]
        },
        {
          "type": "basic",
          "description": "right_command + ' -> up_arrow",
          "from": {
            "key_code": "'",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": []
            }
          ]
        }
      ]
    }
  ]
}
